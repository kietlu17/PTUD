<%- include('../../partials/header', { title: 'Danh Sách Bài Tập Đã Giao' }) %>

<div class="container-fluid">
    <div class="row">
        <%- include('../../partials/nav-giaovien') %>

        <main class="col-md-10 content p-4">
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="text-primary fw-bold mb-0">
                    <i class="fas fa-book-open me-2"></i> 
                    BÀI TẬP ĐÃ GIAO: LỚP <%= phanCong.lop.TenLop %> - MÔN <%= phanCong.monhoc.TenMon %>
                </h4>
                
                <div>
                    <a href="/giaovien/giao-bai-tap/<%= phanCong.id %>" class="btn btn-success btn-sm me-2 shadow-sm fw-bold">
                        <i class="fas fa-plus me-1"></i> Tạo Bài Mới
                    </a>
                    <a href="/giaovien/giao-bai-tap" class="btn btn-secondary btn-sm shadow-sm">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại chọn lớp
                    </a>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered text-center align-middle mb-0">
                            <thead class="bg-primary text-white">
                                <tr>
                                    <th style="width: 5%">STT</th>
                                    <th style="width: 20%">Tiêu Đề</th>
                                    <th style="width: 25%">Nội Dung / Yêu Cầu</th>
                                    <th style="width: 15%">File Đính Kèm</th> <th style="width: 15%">Hạn Nộp</th>
                                    <th style="width: 10%">Trạng Thái</th>
                                    <th style="width: 10%">Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (dsBaiTap && dsBaiTap.length > 0) { %>
                                    <% dsBaiTap.forEach((bt, index) => { %>
                                        <tr>
                                            <td class="fw-bold text-secondary"><%= index + 1 %></td>
                                            <td class="text-start fw-bold text-primary ps-3"><%= bt.TieuDe %></td>
                                            
                                            <td class="text-start text-muted small">
                                                <%= bt.NoiDung ? bt.NoiDung.substring(0, 50) + (bt.NoiDung.length > 50 ? '...' : '') : 'Không có nội dung' %>
                                            </td>

                                            <td>
                                                <% if (bt.File) { %>
                                                    <a href="<%= bt.File %>" class="btn btn-sm btn-outline-info fw-bold px-3 shadow-sm" download>
                                                        <i class="fas fa-download me-1"></i> Tải về
                                                    </a>
                                                <% } else { %>
                                                    <span class="text-muted small">-</span>
                                                <% } %>
                                            </td>

                                            <td>
                                                <%= new Date(bt.HanNop).toLocaleString('vi-VN') %>
                                            </td>

                                            <td>
                                                <% 
                                                    const now = new Date();
                                                    const han = new Date(bt.HanNop);
                                                %>
                                                <% if (now > han) { %>
                                                    <span class="badge bg-danger rounded-pill px-3">Đã đóng</span>
                                                <% } else { %>
                                                    <span class="badge bg-success rounded-pill px-3">Đang mở</span>
                                                <% } %>
                                            </td>

                                            <td>
                                                <a href="/giaovien/giao-bai-tap/sua/<%= bt.id %>" class="btn btn-sm btn-warning fw-bold px-3 shadow-sm text-dark">
                                                    <i class="fas fa-edit me-1"></i> Sửa
                                                </a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7" class="text-center py-5 text-muted">
                                            <i class="fas fa-folder-open fa-3x mb-3 d-block opacity-50"></i>
                                            Chưa có bài tập nào được giao cho lớp này.
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </main>
    </div>
</div>

<style>
    /* Hiệu ứng hover cho hàng */
    table tbody tr:hover { background-color: #f8f9fa; }
    
    /* Nút Sửa đẹp hơn */
    .btn-warning:hover {
        background-color: #ffca2c;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
</style>