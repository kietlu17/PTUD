<%- include('../../partials/header', { title: 'Chọn Lớp Nhập Điểm' }) %>

<div class="container-fluid">
    <div class="row">

        <%- include('../../partials/nav-giaovien') %>

        <main class="col-md-10 content p-4">

            <h4 class="text-primary mb-4">
                <i class="fas fa-edit me-2"></i> CHỌN LỚP ĐỂ NHẬP ĐIỂM (SỔ ĐIỂM)
            </h4>

            <div class="table-responsive shadow-sm bg-white rounded">
                <table class="table table-bordered text-center align-middle mb-0">
                    <thead class="table-secondary">
                        <tr>
                            <th style="width: 10%;">STT</th>
                            <th style="width: 25%;">Tên Lớp</th>
                            <th style="width: 25%;">Môn Học</th>
                            <th style="width: 20%;">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (dsPhanCong && dsPhanCong.length > 0) { %>
                            <% dsPhanCong.forEach(item, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    
                                    <td><%= item.lop.TenLop %></td>

                                    <td><%= item.monhoc.TenMon %></td>

                                    <td>
                                        <a href="/giaovien/nhap-diem/<%= item.id %>" 
                                           class="btn btn-sm btn-primary fw-bold px-4">
                                            <i class="fas fa-pen-alt me-1"></i> Nhập điểm
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">
                                    Bạn chưa được phân công dạy lớp nào.
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </main>

    </div>
</div>

<style>
    /* CSS đồng bộ */
    thead th {
        background-color: #e9ecef !important;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.9rem;
        color: #212529;
    }
    
    /* Nút Xanh Dương (Primary) */
    .btn-primary {
        background-color: #0d6efd;
        border: none;
        color: white; /* Đảm bảo chữ trắng */
        transition: all 0.2s;
        font-weight: 600;
    }
    
    .btn-primary:hover {
        background-color: #0b5ed7;
        transform: translateY(-1px);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
</style>