<%- include('../partials/header', { title: 'Dashboard Nhân Viên Sở' }) %>

    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            <%- include('../partials/nav-sogiaoduc', { profile, currentUrl }) %>


                <!-- Main Content -->
                <main class="col-md-10 content">
                    <h4 class="text-center fw-bold mb-4">THÔNG TIN NHÂN VIÊN SỞ</h4>

                    <div class="info-card shadow-sm">
                        <div class="row align-items-center">
                            <div class="col-md-3 text-center">
                                <div class="photo-box">Ảnh</div>
                            </div>

                            <div class="col-md-9">
                                <div class="row">

                                    <div class="col-md-6">
                                        <p><strong>Mã NV:</strong>
                                            <%= nhanVien.MaSGD %>
                                        </p>
                                        <p><strong>Họ tên:</strong>
                                            <%= nhanVien.HoTen %>
                                        </p>
                                        <p><strong>Giới tính:</strong>
                                            <%= nhanVien.GioiTinh %>
                                        </p>
                                        <p><strong>Ngày sinh:</strong>
                                            <%= nhanVien.NgaySinh %>
                                        </p>
                                        <p><strong>Chức vụ:</strong>
                                            <%= nhanVien.ChucVu %>
                                        </p>
                                    </div>

                                    <div class="col-md-6">
                                        <p><strong>Đơn vị công tác:</strong> Sở Giáo dục & Đào tạo</p>
                                        <p><strong>Email:</strong>
                                            <%= nhanVien.Email %>
                                        </p>
                                        <p><strong>Số điện thoại:</strong>
                                            <%= nhanVien.SoDT %>
                                        </p>
                                        <p><strong>Trạng thái:</strong>
                                            <%= nhanVien.TrangThai || 'Đang công tác' %>
                                        </p>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>

                    <!-- Feature Menu -->
                    <div class="row g-3 mt-3">
                        <div class="col-md-3">
                            <a href="/sogiaoduc/monhoc" class="feature-card" style="color: black;">Quản lý môn học</a>
                        </div>

                        <div class="col-md-3">
                            <a href="/sogiaoduc/nhapdiem" class="feature-card" style="color: black;">Nhập điểm thi</a>
                        </div>

                        <div class="col-md-3">
                            <a href="/sogiaoduc/xet-tuyen" class="feature-card" style="color: black;">Xét tuyển</a>
                        </div>

                        <div class="col-md-3">
                            <a href="/sogiaoduc/chi-tieu" class="feature-card text-center" style="color: black;">Chỉ tiêu &amp; Điểm chuẩn</a>
                        </div>
                    </div>

                    <div class="row g-3 mt-4">
                        <div class="col-md-6">
                            <div class="feature-card text-center">
                                <a href="/sogiaoduc/dongbo/thisinh">Đồng bộ hồ sơ</a></div>
                        </div>

                        <div class="col-md-6">
                            <div class="p-3 border rounded" style="background-color: white;">
                                <p class="fw-semibold text-center mb-2">Danh sách các trường THPT</p>

                                <% if (truongs && truongs.length> 0) { %>
                                    <% truongs.forEach(t=> { %>
                                        <p>
                                            <%= t.name %>
                                        </p>
                                        <% }) %>
                                            <% } else { %>
                                                <p class="text-center text-muted">Chưa có trường nào được thêm</p>
                                                <% } %>

                            </div>

                        </div>


                </main>

        </div>
    </div>

    </body>

    </html>