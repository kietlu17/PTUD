<div class="row mb-4">
    <div class="col-md-8">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-white fw-bold">
                <i class="bi bi-bar-chart-fill text-primary me-2"></i>Phân Phối Điểm Số
            </div>
            <div class="card-body">
                <canvas id="gradeChart" style="max-height: 300px;"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-white fw-bold">
                <i class="bi bi-pie-chart-fill text-success me-2"></i>Tỷ Lệ Đạt / Không Đạt
            </div>
            <div class="card-body d-flex justify-content-center align-items-center">
                <canvas id="passChart" style="max-height: 250px;"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-white fw-bold d-flex justify-content-between align-items-center">
        <span><i class="bi bi-table me-2"></i>Bảng Điểm Chi Tiết</span>
        <span class="badge bg-primary rounded-pill" id="totalCount">0 học sinh</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive" style="max-height: 500px; overflow: auto;">
            <table class="table table-striped table-hover mb-0 text-center align-middle border-top">
                <thead class="table-light sticky-top">
                    <tr>
                        <th>Mã HS</th>
                        <th>Họ Tên</th>
                        <th>Lớp</th>
                        <th>Môn</th>
                        <th>Thường kỳ</th>
                        <th>Giữa kỳ</th>
                        <th>Cuối kỳ</th>
                        <th>Trung bình</th>
                        <th>Xếp loại</th>
                    </tr>
                </thead>
                <tbody id="scoreTableBody">
                    <tr><td colspan="9" class="text-center text-muted py-3">Đang tải dữ liệu...</td></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>