<%- include('partials/header', { title: 'Dashboard Nhân Viên Sở' }) %>

    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            <nav class="col-md-2 sidebar">
                <div class="sidebar-info mb-3">
                    <div class="photo-box2">Ảnh</div>
                    <span class="nhanvien-ten">
                        <%= nhanVien.HoTen %>
                    </span>
                </div>


                <a href="#" class="active">Trang Dashboard</a>
                <a href="/monhoc">Quản lý môn học</a>
                <a href="/diemthi">Nhập điểm thi</a>
                <a href="/xet-tuyen">Xét tuyển</a>
                <a href="/chi-tieu">Chỉ tiêu tuyển sinh</a>

                <form id="logoutForm" action="/logout" method="POST" style="display:none;"></form>
                <button class="logout-btn" onclick="document.getElementById('logoutForm').submit()">Đăng xuất</button>
            </nav>

            <!-- Main Content -->
            <main class="col-md-10 content">
                <h4 class="text-center fw-bold mb-4">THÔNG TIN NHÂN VIÊN SỞ</h4>

                <div class="info-card shadow-sm">
                    <div class="row align-items-center">
                        <div class="col-md-3 text-center">
                            <div class="photo-box">Ảnh</div>
                        </div>

                        <div class="col-md-9">
                            <div class="row">

                                <div class="col-md-6">
                                    <p><strong>Mã NV:</strong>
                                        <%= nhanVien.MaNV %>
                                    </p>
                                    <p><strong>Họ tên:</strong>
                                        <%= nhanVien.HoTen %>
                                    </p>
                                    <p><strong>Giới tính:</strong>
                                        <%= nhanVien.GioiTinh %>
                                    </p>
                                    <p><strong>Ngày sinh:</strong>
                                        <%= nhanVien.NgaySinh %>
                                    </p>
                                    <p><strong>Chức vụ:</strong>
                                        <%= nhanVien.ChucVu %>
                                    </p>
                                </div>

                                <div class="col-md-6">
                                    <p><strong>Đơn vị công tác:</strong> Sở Giáo dục & Đào tạo</p>
                                    <p><strong>Email:</strong>
                                        <%= nhanVien.Email %>
                                    </p>
                                    <p><strong>Số điện thoại:</strong>
                                        <%= nhanVien.SoDT %>
                                    </p>
                                    <p><strong>Trạng thái:</strong>
                                        <%= nhanVien.TrangThai || 'Đang công tác' %>
                                    </p>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>

                <!-- Feature Menu -->
                <div class="row g-3 mt-3">
                    <div class="col-md-3">
                        <a href="/monhoc" class="feature-card" style="color: black;">Quản lý môn học</a>
                    </div>

                    <div class="col-md-3">
                        <a href="/diemthi" class="feature-card" style="color: black;">Nhập điểm thi</a>
                    </div>

                    <div class="col-md-3">
                        <a href="/xet-tuyen" class="feature-card" style="color: black;">Xét tuyển</a>
                    </div>

                    <div class="col-md-3">
                        <a href="/chi-tieu" class="feature-card text-center" style="color: black;">Chỉ tiêu tuyển
                            sinh</a>
                    </div>
                </div>

                <div class="row g-3 mt-4">
                    <div class="col-md-6">
                        <div class="feature-card text-center">Thống kê điểm thi</div>
                    </div>

                    <div class="col-md-6">
                        <div class="p-3 border rounded" style="background-color: white;">
                            <p class="fw-semibold text-center mb-2">Danh sách các trường THPT</p>
                            <p>THPT Nguyễn Văn A</p>
                            <p>THPT Nguyễn Văn B</p>
                            <p>THPT Nguyễn Văn C</p>
                        </div>
                    </div>


            </main>

        </div>
    </div>

    </body>

    </html>