<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // --- INIT DATA ---
    const dataStore = document.getElementById('tkb-data-store');
    let savedSchedule = [], listPhanCong = [], busyMap = {}, teacherLoad = {};
    try {
        savedSchedule = JSON.parse(dataStore.dataset.schedule || '[]');
        listPhanCong = JSON.parse(dataStore.dataset.phancong || '[]');
        busyMap = JSON.parse(dataStore.dataset.busy || '{}');
        teacherLoad = JSON.parse(dataStore.dataset.load || '{}');
    } catch (e) {}

    let currentThu = null, currentTiet = null, currentSelection = null;
    
    // === C·∫§U H√åNH QUAN TR·ªåNG ƒê·ªÇ QUY ƒê·ªîI ===
    const WEEKS_PER_YEAR = 35;      // 1 NƒÉm h·ªçc = 35 tu·∫ßn
    const WEEKS_PER_SEMESTER = 18;  // 1 H·ªçc k·ª≥ = 18 tu·∫ßn (ƒë·ªÉ hi·ªÉn th·ªã)

    // Helper
    const dayMap = {'Hai':'2', 'Ba':'3', 'T∆∞':'4', 'Tu':'4', 'NƒÉm':'5', 'Nam':'5', 'S√°u':'6', 'Sau':'6', 'B·∫£y':'7', 'Bay':'7'};
    const reverseDayMap = {'2':'Hai', '3':'Ba', '4':'T∆∞', '5':'NƒÉm', '6':'S√°u', '7':'B·∫£y'};
    function normalizeDay(dbDay) { return dayMap[dbDay] || dbDay.toString(); }
    function denormalizeDay(uiDay) { return reverseDayMap[uiDay] || uiDay; }

    document.addEventListener("DOMContentLoaded", () => {
        savedSchedule.forEach(item => {
            const tenGV = item.giaoVien?.HoVaTen || 'Unknown';
            const tenMon = item.monHoc?.TenMon || 'Unknown';
            updateCellUI(item.Thu, item.Tiet, tenGV, tenMon, item.id_GiaoVien, item.id_MonHoc, false);
        });
    });

    function countSubjectOnGrid() {
        const counts = {};
        document.querySelectorAll('.schedule-input').forEach(input => {
            if (input.value) {
                try {
                    const val = JSON.parse(input.value);
                    if (!counts[val.id_Mon]) counts[val.id_Mon] = 0;
                    counts[val.id_Mon]++;
                } catch(e){}
            }
        });
        return counts;
    }

    function openSelectModal(thu, tiet) {
        currentThu = thu; currentTiet = tiet; currentSelection = null;
        document.getElementById('modalTitleInfo').innerText = `Th·ª© ${thu} - Ti·∫øt ${tiet}`;
        renderModalList(); 
        new bootstrap.Modal(document.getElementById('selectionModal')).show();
    }

    // --- RENDER LIST (LOGIC M·ªöI: T√çNH THEO H·ªåC K·ª≤) ---
    function renderModalList() {
        const tbody = document.getElementById('modalListBody');
        tbody.innerHTML = '';

        const nThu = normalizeDay(currentThu);
        const cellId = `cell-${nThu}-${currentTiet}`;
        const input = document.getElementById(cellId)?.querySelector('input');
        let currentMonID = null, currentGvID = null;
        if(input?.value) {
            try { 
                const v = JSON.parse(input.value); 
                currentMonID = v.id_Mon; currentGvID = v.id_GV;
            } catch(e){}
        }

        const subjectCounts = countSubjectOnGrid(); // ƒê·∫øm s·ªë ti·∫øt tr√™n l∆∞·ªõi (1 tu·∫ßn)
        const dbThu = denormalizeDay(currentThu);

        // D√≤ng H·ªßy
        const emptyRow = document.createElement('tr');
        emptyRow.className = 'row-selectable';
        emptyRow.innerHTML = `<td colspan="4" class="text-danger fw-bold py-3">-- Tr·ªëng (H·ªßy ti·∫øt) --</td>`;
        emptyRow.addEventListener('click', () => selectRow(emptyRow, null));
        tbody.appendChild(emptyRow);

        listPhanCong.forEach(pc => {
            if (!pc.giaoVien || !pc.monHoc) return;
            const gvID = pc.giaoVien.id;
            const monID = pc.monHoc.id;

            // 1. T√çNH TO√ÅN GI·ªöI H·∫†N (QUY ƒê·ªîI NƒÇM -> TU·∫¶N -> K·ª≤)
            const totalPeriodsYear = pc.monHoc.SoTiet || 0; // VD: 105
            
            // a. S·ªë ti·∫øt t·ªëi ƒëa trong 1 tu·∫ßn (105 / 35 = 3 ti·∫øt/tu·∫ßn)
            let maxPerWeek = Math.ceil(totalPeriodsYear / WEEKS_PER_YEAR);
            if (maxPerWeek === 0) maxPerWeek = 5;

            // b. Quy ra t·ªïng ti·∫øt H·ªçc K·ª≥ ƒë·ªÉ hi·ªÉn th·ªã (3 ti·∫øt/tu·∫ßn * 18 tu·∫ßn = 54 ti·∫øt)
            const limitSemester = maxPerWeek * WEEKS_PER_SEMESTER;

            // 2. T√çNH TI·∫æN ƒê·ªò HI·ªÜN T·∫†I
            let usedOnGrid = subjectCounts[monID] || 0;
            if (monID == currentMonID) usedOnGrid--; 

            // Ti·∫øn ƒë·ªô k·ª≥ = (S·ªë ti·∫øt tr√™n l∆∞·ªõi) * 18 tu·∫ßn
            const currentUsedSemester = usedOnGrid * WEEKS_PER_SEMESTER;
            const nextUsedSemester = (usedOnGrid + 1) * WEEKS_PER_SEMESTER;

            // 3. CHECK FULL (D·ª±a tr√™n gi·ªõi h·∫°n tu·∫ßn cho ch√≠nh x√°c)
            const isSubjectFull = usedOnGrid >= maxPerWeek;

            // 4. CHECK GV
            const busyKey = `${gvID}-${dbThu}-${currentTiet}`;
            const busyClass = busyMap[busyKey];
            const tLoad = teacherLoad[gvID] || { total: 0, days: {} };
            const loadDay = tLoad.days[dbThu] || 0;
            const loadWeek = tLoad.total;
            const isGvOverload = (loadDay >= 5 || loadWeek >= 30) && (gvID != currentGvID);

            const tr = document.createElement('tr');
            let isDisabled = false, reason = "", badge = "";

            if (busyClass) {
                isDisabled = true; reason = `GV b·∫≠n d·∫°y l·ªõp ${busyClass}`; badge = `<span class="busy-badge">B·∫≠n</span>`;
            } else if (isGvOverload) {
                isDisabled = true; reason = "GV qu√° t·∫£i"; badge = `<span class="full-badge">GV Full</span>`;
            } else if (isSubjectFull) {
                isDisabled = true; reason = `M√¥n n√†y ƒë√£ ƒë·ªß ${limitSemester} ti·∫øt/k·ª≥`; badge = `<span class="full-badge bg-secondary">ƒê·ªß ti·∫øt</span>`;
            }

            if (isDisabled) {
                tr.className = busyClass ? 'row-selectable row-busy' : 'row-selectable row-full';
                tr.addEventListener('click', () => alert(`üö´ Kh√¥ng th·ªÉ ch·ªçn!\n${reason}.`));
                tr.innerHTML = `
                    <td class="text-start ps-4 text-muted">${pc.giaoVien.HoVaTen} ${badge}</td>
                    <td class="text-muted fw-bold">${pc.monHoc.TenMon}</td>
                    <td class="text-muted">${currentUsedSemester}/${limitSemester}</td>
                    <td class="text-muted">${loadWeek}</td>
                `;
            } else {
                tr.className = 'row-selectable';
                if (gvID == currentGvID) tr.classList.add('table-active');
                
                const data = { idGV: gvID, idMon: monID, tenGV: pc.giaoVien.HoVaTen, tenMon: pc.monHoc.TenMon };
                tr.addEventListener('click', function() { selectRow(this, data); });

                const statusClass = (currentUsedSemester >= limitSemester - WEEKS_PER_SEMESTER) ? 'text-warning-custom' : 'text-safe';

                // --- T√çNH TO√ÅN THANH TI·∫æN ƒê·ªò CHO "T·ªîNG TI·∫æT D·∫†Y" ---
                const maxLoadWeek = 30; // Gi·ªõi h·∫°n chu·∫©n
                const percentLoad = Math.min((loadWeek / maxLoadWeek) * 100, 100); // T√≠nh % ƒë·ªÉ v·∫Ω thanh
                
                // Ch·ªçn m√†u: Xanh (An to√†n) -> V√†ng (S·∫Øp ƒë·∫ßy) -> ƒê·ªè (Nguy hi·ªÉm)
                let barColor = 'bg-success'; 
                if (loadWeek >= 20) barColor = 'bg-warning';
                if (loadWeek >= 28) barColor = 'bg-danger';

                tr.innerHTML = `
                    <td class="teacher-name text-start ps-4">
                        ${pc.giaoVien.HoVaTen} 
                        ${gvID == currentGvID ? '<span class="badge bg-info text-dark ms-2" style="font-size:0.6rem">ƒêang d·∫°y</span>' : ''}
                    </td>
                    <td class="${statusClass}">${pc.monHoc.TenMon}</td>
                    
                    <td class="${statusClass}">
                        ${currentUsedSemester} / ${limitSemester}
                    </td>
                    
                    <td class="align-middle px-3">
                        <div class="d-flex justify-content-between mb-1" style="font-size: 0.75rem;">
                            <span class="fw-bold text-secondary">${loadWeek} ti·∫øt</span>
                            <span class="text-muted">Max ${maxLoadWeek}</span>
                        </div>
                        <div class="progress" style="height: 6px; background-color: #e9ecef; border-radius: 10px;">
                            <div class="progress-bar ${barColor}" role="progressbar" 
                                 style="width: ${percentLoad}%; border-radius: 10px;" 
                                 aria-valuenow="${loadWeek}" aria-valuemin="0" aria-valuemax="${maxLoadWeek}">
                            </div>
                        </div>
                    </td>
                `;
            }
            tbody.appendChild(tr);
        });
    }

    function selectRow(el, data) {
        document.querySelectorAll('.row-selectable').forEach(r => r.classList.remove('selected'));
        el.classList.add('selected');
        currentSelection = data;
    }

    function confirmSelection() {
        const isSelectedRow = document.querySelector('.row-selectable.selected');
        if (!isSelectedRow) { alert("Vui l√≤ng ch·ªçn!"); return; }
        if (currentSelection) updateCellUI(currentThu, currentTiet, currentSelection.tenGV, currentSelection.tenMon, currentSelection.idGV, currentSelection.idMon, true);
        else updateCellUI(currentThu, currentTiet, null, null, null, null, true);
        bootstrap.Modal.getInstance(document.getElementById('selectionModal')).hide();
    }

    function updateCellUI(thu, tiet, tenGV, tenMon, idGV, idMon, updateStats = false) {
        const nThu = normalizeDay(thu); 
        const dbThu = denormalizeDay(thu);
        const cell = document.getElementById(`cell-${nThu}-${tiet}`);
        if (!cell) return;

        const input = cell.querySelector('input');
        const defDiv = cell.querySelector('.default-content');
        const fillDiv = cell.querySelector('.filled-content');

        if (updateStats) {
            let oldData = null;
            try { oldData = input.value ? JSON.parse(input.value) : null; } catch(e){}
            const oldGvID = oldData ? oldData.id_GV : null;
            const newGvID = idGV;

            if (oldGvID != newGvID) {
                if (oldGvID && teacherLoad[oldGvID]) {
                    teacherLoad[oldGvID].total--;
                    if (teacherLoad[oldGvID].days[dbThu]) teacherLoad[oldGvID].days[dbThu]--;
                }
                if (newGvID) {
                    if (!teacherLoad[newGvID]) teacherLoad[newGvID] = { total: 0, days: {} };
                    teacherLoad[newGvID].total++;
                    if (!teacherLoad[newGvID].days[dbThu]) teacherLoad[newGvID].days[dbThu] = 0;
                    teacherLoad[newGvID].days[dbThu]++;
                }
            }
        }

        if (idGV && idMon) {
            cell.classList.add('filled');
            defDiv.classList.add('d-none');
            fillDiv.classList.remove('d-none');
            document.getElementById(`sub-${nThu}-${tiet}`).innerText = tenMon;
            document.getElementById(`tea-${nThu}-${tiet}`).innerText = tenGV;
            input.dataset.thu = nThu; 
            input.value = JSON.stringify({ id_GV: idGV, id_Mon: idMon });
        } else {
            cell.classList.remove('filled');
            defDiv.classList.remove('d-none');
            fillDiv.classList.add('d-none');
            input.value = "";
        }
    }

    async function saveScheduleToDB() {
        const id_Lop = document.getElementById('classId').value;
        const scheduleData = [];
        
        document.querySelectorAll('.schedule-input').forEach(input => {
            if (input.value) {
                try {
                    const val = JSON.parse(input.value);
                    const dbThu = denormalizeDay(input.dataset.thu);
                    scheduleData.push({ thu: dbThu, tiet: input.dataset.tiet, id_GV: val.id_GV, id_Mon: val.id_Mon });
                } catch(e) {}
            }
        });

        try {
