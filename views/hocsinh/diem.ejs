<%- include('../partials/header', { title: 'Xem Điểm' }) %>

<div class="container-fluid">
  <div class="row">

    <!-- Sidebar -->
    <%- include('../partials/nav-hocsinh') %>

    <!-- Embedded page content -->
    <main class="col-md-10 content">
     <h1>Điểm của <%= hocSinh.HoVaTen %> :</h1>

  <% if (!scores || scores.length === 0) { %>
    <div class="alert alert-info">Chưa có dữ liệu điểm.</div>
  <% } else { %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Môn</th>
          <th>Học kỳ</th>
          <th>Điểm thường kỳ</th>
          <th>Điểm giữa kỳ</th>
          <th>Điểm cuối kỳ</th>
          <th>Điểm TB</th>
        </tr>
      </thead>
      <tbody>
        <% scores.forEach(s => { %>
          <tr>
            <td><%= s.TenMon %></td>
            <td><%= s.HocKy || '' %></td>
            <td><%= s.DiemThuongKy != null ? s.DiemThuongKy : '' %></td>
            <td><%= s.DiemGiuaKy != null ? s.DiemGiuaKy : '' %></td>
            <td><%= s.DiemCuoiKy != null ? s.DiemCuoiKy : '' %></td>
            <td><%= s.DiemTrungBinh != null ? s.DiemTrungBinh : '' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
    </main>

  </div>
</div>
</body>
</html>