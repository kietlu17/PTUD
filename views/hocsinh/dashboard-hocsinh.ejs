<%- include('../partials/header', { title: 'Dashboard Học Sinh' }) %>

<div class="container-fluid">
  <div class="row">

    <!-- Sidebar -->
<%- include('../partials/nav-hocsinh') %>

    <!-- Main content -->
    <main class="col-md-10 content">
      <h4 class="text-center fw-bold mb-4">THÔNG TIN HỌC SINH</h4>

      <div class="info-card shadow-sm">
        <div class="row align-items-center">
          <div class="col-md-3 text-center">
            <div class="photo-box">Ảnh</div>
          </div>
          <div class="col-md-9">
            <div class="row">
              <div class="col-md-6">
                <p><strong>Mã HS:</strong> <%= hocSinh.MaHS %></p>
                <p><strong>Họ tên:</strong> <%= hocSinh.HoVaTen %></p>
                <p><strong>Giới tính:</strong> <%= hocSinh.GioiTinh %></p>
                <p><strong>Ngày sinh:</strong> <%= hocSinh.NgaySinh %></p>
              </div>
              <div class="col-md-6">
                <p><strong>Trường:</strong> <%= hocSinh.Truong %></p>
                <p><strong>Lớp:</strong> <%= hocSinh.Lop %></p>
                <p><strong>Trạng thái:</strong> <%= hocSinh.TrangThai || 'Đang học' %></p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Feature cards -->
      <div class="row g-3">
        <div class="col-md-4">
          <div class="feature-card"><a href="/hocsinh/diem/<%= profile.id %>">Kết Quả Học Tập</a></div>
        </div>
        <div class="col-md-4">
          <div class="feature-card"><a href="/hocsinh/thoikhoabieu">Thời Khóa Biểu</a></div>
        </div>
        <div class="col-md-4">
          <div class="feature-card"><a href="/hocsinh/bai-tap">Bài Tập</a></div>
        </div>


      </div>
    </main>

  </div>
</div>

</body>
</html>
